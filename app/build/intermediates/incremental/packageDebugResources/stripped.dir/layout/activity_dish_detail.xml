<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <View
        android:id="@+id/view"
        android:layout_width="1080px"
        android:layout_height="552.96px"
        android:background="@color/mint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="108.8px"
        android:layout_height="108.8px"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="152.64px"
        android:layout_marginRight="910.08px"
        android:layout_marginBottom="299.52px"
        android:background="@drawable/back_button_background1"
        android:src="@drawable/back_button_foregroundwhite"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/view1"
        android:layout_width="941.76px"
        android:layout_height="313.92px"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="374.4px"
        android:layout_marginRight="69.12px"

        android:background="@drawable/grey_border_view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="154dp"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.192">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="176.24px"
            android:layout_marginTop="127.6px"
            android:layout_marginBottom="212.84px"
            android:text="Shaking Beef Tri-Tip"
            android:textColor="@color/black"
            android:textSize="46.08px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="135px"
            android:layout_marginRight="143.12px"
            android:layout_weight="1"
            android:gravity="right"
            android:text="30.000 VND" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="159.24px"
        android:layout_marginBottom="127.68px"
        android:text="Mô tả của món ăn"
        android:textSize="40.32px"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="414dp"
        android:layout_height="417dp"
        android:layout_marginTop="140.36px"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69.12px"
                android:layout_marginTop="89.28px"
                android:text="Choice of size"
                android:textColor="@color/black"
                android:textSize="40.32px"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginTop="20px">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dishdetailChoiceSizeRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>


            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69.12px"
                android:layout_marginTop="30.28px"
                android:text="Choice of topping"
                android:textColor="@color/black"
                android:textSize="40.32px"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="30px">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dishdetailChoiceToppingRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69.12px"
                android:layout_marginTop="50px"
                android:text="Additional Message"
                android:textColor="@color/black"
                android:textSize="40.32px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Add_a_note_to_the_restaurantButton"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="69.12px"
                android:background="#00000000"
                android:fontFamily="@font/lato_regular"
                android:text="@string/Add_a_note_to_the_restaurant"
                android:textAllCaps="false"
                android:textColor="@color/mint"
                android:textSize="40.32px" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="61.12px"
                android:layout_marginRight="61.12px"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Note here!" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/view2"
        android:layout_width="1080px"
        android:layout_height="300px"
        android:layout_marginTop="1920px"
        android:layout_marginBottom="0px"
        android:background="@drawable/mint_border_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="308.16px"
        android:layout_height="77.76px"
        android:layout_marginLeft="70px"
        android:layout_marginTop="80px"
        android:background="@drawable/darkmint_border_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"></View>

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="25dp"
        android:layout_marginLeft="70px"
        android:layout_marginTop="80px"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="3px"
            android:background="@drawable/darkmint_border_view"
            android:src="@drawable/ic_subtraction_foreground" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="12px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#FFFFFF" />
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50px"
            android:layout_height="70px"
            android:layout_marginRight="40px"
            android:layout_marginTop="3px"
            android:background="@drawable/darkmint_border_view"
            android:src="@drawable/ic_plus_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="151dp"
        android:layout_marginLeft="400px"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">
        <Button
            android:id="@+id/button"
            android:layout_width="256.32px"
            android:layout_height="77.76px"
            android:layout_marginTop="80.64px"
            android:layout_marginLeft="65px"
            android:background="@drawable/mintlight_border_button"
            android:text="@string/add_dish"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px"
            android:layout_marginRight="80px"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:text="12.000 VND" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>