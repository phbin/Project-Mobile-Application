<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customer.CustomerMenu">
    <Button
        android:id="@+id/btnBack"
        android:layout_width="55px"
        android:layout_height="55px"
        android:layout_marginTop="54.16px"
        android:layout_marginStart="960px"
        android:drawableStart="@drawable/ic_close_black"
        android:background="@android:color/transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="69px"
        android:layout_marginTop="98px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="63px"
            android:layout_height="63px"
            android:src="@drawable/homecus"/>

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="40px"
            android:fontFamily="@font/lato_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="69px"
        android:layout_marginTop="98px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnHistory"
            android:layout_width="63px"
            android:layout_height="63px"
            android:src="@drawable/historycus"/>

        <TextView
            android:id="@+id/textHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:text="Order History"
            android:textColor="@color/black"
            android:textSize="40px"
            android:fontFamily="@font/lato_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="69px"
        android:layout_marginTop="98px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="63px"
            android:layout_height="63px"
            android:src="@drawable/profilecus"/>

        <TextView
            android:id="@+id/textProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="40px"
            android:fontFamily="@font/lato_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="69px"
        android:layout_marginTop="98px"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnLogout"
            android:layout_width="63px"
            android:layout_height="63px"
            android:src="@drawable/ic_baseline_exit_to_app_black"/>

        <TextView
            android:id="@+id/textLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58px"
            android:text="Log out"
            android:textColor="@color/black"
            android:textSize="40px"
            android:fontFamily="@font/lato_regular"/>
    </LinearLayout>
</LinearLayout>