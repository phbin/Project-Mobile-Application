<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customer.CustomerProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57.6px"
        android:layout_marginHorizontal="69.12px"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="57.6px"
            android:layout_height="57.6px"
            android:id="@+id/backButton"
            android:background="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/lato_semibold"
            android:textSize="51.84px"
            android:textColor="@color/black"
            android:layout_marginLeft="335.32px"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="236px"
        android:layout_height="236px"
        android:src="@drawable/meow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140px"/>
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/lato_semibold"
        android:textColor="@color/black"
        android:textSize="90px"
        android:layout_marginTop="30px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Phone_number"
        android:layout_marginLeft="95px"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/grey"
        android:textSize="37.04px"
        android:layout_marginTop="70px"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="931.82px"
        android:layout_height="196px"
        android:layout_marginTop="14px"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="28.8px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34.56px"
            android:layout_marginLeft="40.32px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="45px">

            <TextView
                android:id="@+id/textViewPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="49px"
                android:text="sdt nha"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="20px"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default address"
        android:layout_marginLeft="95px"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/grey"
        android:textSize="37.04px"
        android:layout_marginTop="53.38px"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="931.82px"
        android:layout_height="196px"
        android:layout_marginTop="14px"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="28.8px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34.56px"
            android:layout_marginLeft="40.32px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="45px">

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="49px"
                android:autoSizeTextType="uniform"
                android:text="address nha"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="20px"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="95px"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/grey"
        android:textSize="37.04px"
        android:layout_marginTop="53.38px"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="931.82px"
        android:layout_height="196px"
        android:layout_marginTop="14px"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="28.8px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34.56px"
            android:layout_marginLeft="40.32px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="45px">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="49px"
                android:text="email nha"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="20px"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>