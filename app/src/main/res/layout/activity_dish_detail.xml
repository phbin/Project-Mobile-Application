<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.RestaurantActivity">

    <ImageView
        android:id="@+id/view"
        android:layout_width="1080px"
        android:layout_height="552.96px"
        android:background="@color/mint"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="108.8px"
        android:layout_height="108.8px"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="152.64px"
        android:layout_marginRight="910.08px"
        android:layout_marginBottom="299.52px"
        android:background="@drawable/back_button_background1"
        android:src="@drawable/back_button_foregroundwhite"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/view1"
        android:layout_width="941.76px"
        android:layout_height="313.92px"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="374.4px"
        android:layout_marginRight="69.12px"

        android:background="@drawable/grey_border_view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="150dp"
        android:layout_marginTop="112dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="136.24px"
            android:layout_marginTop="127.6px"
            android:layout_marginBottom="212.84px"
            android:text="Shaking Beef Tri-Tip"
            android:textColor="@color/black"
            android:textSize="46.08px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="135px"
            android:layout_marginRight="143.12px"
            android:layout_weight="1"
            android:gravity="right"
            android:text="30.000 VND" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69.12px"
        android:layout_marginTop="159.24px"
        android:layout_marginBottom="127.68px"
        android:text="Category"
        android:textSize="40.32px"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="414dp"
        android:layout_height="417dp"
        android:layout_marginTop="140.36px"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/dishImage"
        android:layout_width="414dp"
        android:layout_height="400dp"
        android:layout_marginTop="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:layout_width="800px"
            android:layout_height="800px"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="27px"
            android:background="@drawable/square_mint"
            android:layout_gravity="center"
            android:layout_marginTop="270px">

            <ImageView
                android:id="@+id/imageDish"
                android:layout_width="800px"
                android:layout_height="800px"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="1080px"
        android:layout_height="300px"
        android:layout_marginTop="1920px"
        android:layout_marginBottom="0px"
        android:background="@drawable/mint_border_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view3"
        android:layout_width="308.16px"
        android:layout_height="77.76px"
        android:layout_marginLeft="70px"
        android:layout_marginTop="80px"
        android:background="@drawable/darkmint_border_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"></View>

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="25dp"
        android:layout_marginLeft="70px"
        android:layout_marginTop="80px"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">

        <ImageButton
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="3px"
            android:background="@drawable/darkmint_border_view"
            android:src="@drawable/ic_subtraction_foreground" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="12px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF" />
        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="50px"
            android:layout_height="70px"
            android:layout_marginRight="40px"
            android:layout_marginTop="3px"
            android:background="@drawable/darkmint_border_view"
            android:src="@drawable/ic_plus_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="151dp"
        android:layout_marginLeft="400px"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">
        <Button
            android:id="@+id/btnAdddish"
            android:layout_width="256.32px"
            android:layout_height="77.76px"
            android:layout_marginTop="80.64px"
            android:layout_marginLeft="65px"
            android:background="@drawable/mintlight_border_button"
            android:text="@string/add_dish"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px"
            android:layout_marginRight="80px"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#FFFFFF"
            android:text="12.000 VND" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>