<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/promotionSheetBottom">
    <LinearLayout
        android:layout_marginTop="57.6px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginTop="8px"
                android:id="@+id/btnBackPromotion"
                android:layout_width="57.6px"
                android:layout_height="57.6px"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suitable promotion for your order"
                android:layout_marginLeft="69.12px"
                android:layout_marginBottom="31.9px"
                android:textSize="51.84px"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/promotionListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0px"
                android:scrollbars="none"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>