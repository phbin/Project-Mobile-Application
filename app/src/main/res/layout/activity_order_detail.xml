<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="65px"
        android:layout_marginTop="50px">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btnBack"
                android:layout_gravity="left"
                android:layout_width="55px"
                android:layout_height="55px"
                android:drawableStart="@drawable/ic_close"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/textViewMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order detail"
                android:textColor="@color/black"
                android:textSize="52px"
                android:fontFamily="@font/lato_semibold"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="200px"
                    android:layout_marginTop="60px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="34.56px"
                        android:layout_marginLeft="40.32px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="45px">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="37.44px"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="30px"
                                android:layout_height="wrap_content"
                                android:text="#"
                                android:textColor="@color/black"
                                android:layout_marginLeft="29.72px"/>

                            <TextView
                                android:id="@+id/textViewOrderID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"/>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="715px"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="37.44px"
                            android:textColor="@color/grey"
                            android:layout_marginTop="26px"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="298px"
                    android:layout_marginTop="70px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="34.56px"
                        android:layout_marginLeft="40.32px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="45px">

                        <TextView
                            android:id="@+id/textViewCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="49px"
                            android:fontFamily="@font/lato_bold"
                            android:layout_marginTop="10px"/>

                        <TextView
                            android:id="@+id/textViewCustomerPhone"
                            android:layout_width="715px"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="37.44px"
                            android:textColor="@color/grey"
                            android:layout_marginTop="19px"/>

                        <TextView
                            android:id="@+id/textViewCustomerAddress"
                            android:layout_width="715px"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="37.44px"
                            android:textColor="@color/grey"
                            android:layout_marginTop="19px"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px"
                    android:layout_marginBottom="30px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="41px"
                        android:layout_marginTop="34.56px"
                        android:layout_marginBottom="40px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order detail"
                            android:textColor="@color/grey"
                            android:textSize="37.44px"
                            android:fontFamily="@font/lato_regular"
                            android:layout_marginTop="34.56px"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listviewItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#00000000"
                            android:layout_marginTop="45.92px"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="2.88px"
                            android:layout_marginTop="47.68px"
                            android:background="#DEDEDE"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="37.44px">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/textFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Delivery fees:"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:id="@+id/textDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.3km"
                                        android:layout_marginLeft="26.8px"
                                        android:fontFamily="@font/lato_bold"
                                        android:textSize="40.32px"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/textNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subtotal"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="40.32px"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="40.32px"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="10px"
                                android:layout_width="380px"
                                android:layout_height="match_parent"
                                android:gravity="right">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="right">

                                    <TextView
                                        android:id="@+id/textViewDeliveryFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="40.32px" />
                                    <TextView
                                        android:id="@+id/textViewSubTotal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:text="0"/>
                                    <TextView
                                        android:id="@+id/textViewTotal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:text="0"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="VND"
                                    android:textColor="@color/black"
                                    android:textSize="40.32px" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="40.32px"
                                    android:text="VND"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="40.32px"
                                    android:text="VND"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>