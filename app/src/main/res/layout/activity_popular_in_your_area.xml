<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopularInYourAreaActivity">

    <ImageButton
        android:layout_width="57.6px"
        android:layout_height="57.6px"
        android:id="@+id/backButton"
        android:background="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184.32px"
        android:layout_marginStart="57.32px"/>
    <ImageButton
        android:layout_width="57.6px"
        android:layout_height="57.6px"
        android:background="@drawable/search_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184.32px"
        android:layout_marginStart="907.2px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_in_your_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="149.76px"
        android:layout_marginStart="311.04px"
        android:textSize="51.84px"
        android:fontFamily="@font/lato_semibold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổ dữ liệu địa chỉ vô đây"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230.4px"
        android:layout_marginStart="380.16px"
        android:textSize="30.2px"

        android:fontFamily="@font/lato_regular">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1900px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridView
            android:id="@+id/restaurantPopularGridView"
            android:layout_width="match_parent"
            android:layout_height="1500px"
            android:layout_marginStart="46px"
            android:layout_marginTop="408.96px"
            android:layout_marginEnd="46.08px"
            android:divider="#00000000"
            android:dividerHeight="0px"
            android:numColumns="2"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>