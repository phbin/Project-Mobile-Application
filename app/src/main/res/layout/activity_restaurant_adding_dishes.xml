<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="54px"
        android:layout_marginTop="72px"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_gravity="left"
            android:layout_width="55px"
            android:layout_height="55px"
            android:drawableStart="@drawable/ic_close"
            android:background="@android:color/transparent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="105px">

            <ImageView
                android:id="@+id/img"
                android:layout_width="828px"
                android:layout_height="484px"
                android:layout_gravity="center_horizontal"
                android:background="@color/grey"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnAddPicture"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:background="@drawable/ic_add_photo"/>
        </FrameLayout>

        <TextView
            android:id="@+id/textVewMenuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"
            android:layout_marginTop="124px"/>

        <EditText
            android:id="@+id/editTextMenuName"
            android:hint="Enter name of menu"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"
            android:layout_marginTop="105px"/>

        <EditText
            android:id="@+id/editTextPrice"
            android:hint="Enter price"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"
            android:layout_marginTop="105px"/>

        <EditText
            android:id="@+id/editTextSize"
            android:hint="Enter size (if any)"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textSize="45px"
            android:textColor="@color/white"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:background="@drawable/mint_button"
                android:backgroundTint="@color/mint"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="46.08px"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>