<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantHomeActivity"
    android:background="@color/black_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="69px"
        android:layout_marginTop="72px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/btnMenu"
                android:layout_width="90px"
                android:layout_height="90px"
                android:drawableStart="@drawable/ic_baseline_menu_24"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnStatus"
                android:layout_width="350px"
                android:layout_height="100px"
                android:layout_gravity="right"
                android:layout_marginLeft="500px"
                android:text="Open"
                android:background="@drawable/mint_button"
                android:backgroundTint="@color/mint"
                android:fontFamily="@font/lato_semibold"
                android:textAllCaps="false"
                app:backgroundTint="@color/mint"
                android:textColor="@color/white"
                android:textSize="33px"
                android:paddingLeft="50px"
                android:drawableStart="@drawable/ic_shipper_status"/>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="60px"
            app:tabTextColor="@color/grey"
            app:tabSelectedTextColor="@color/mint"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom">
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128px"/>



</LinearLayout>