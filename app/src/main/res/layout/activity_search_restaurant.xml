<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.SearchRestaurantActivity"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="57.6px"
        android:layout_height="57.6px"
        android:background="@drawable/back_button"
        android:layout_marginTop="124px"
        android:layout_marginStart="40px"
        android:id="@+id/backButton"/>
<LinearLayout
    android:layout_marginTop="43.2px"
    android:layout_marginEnd="300.12px"
    android:layout_marginStart="125.8px"
    android:layout_width="900px"
    android:layout_height="97.92px"
    android:background="@drawable/search_view_corner_gray">
    <ImageButton
        android:layout_width="53.76px"
        android:layout_marginTop="25px"
        android:layout_marginStart="52.25px"
        android:layout_height="45.93px"
        android:background="@drawable/search_button"/>
    <EditText
      android:layout_marginStart="20px"
        android:layout_width="800px"
        android:id="@+id/editTextSearch"
        android:background="#00000000"
        android:layout_height="97.92px"
        android:hint="@string/search_dish_name_restaurant">
        <requestFocus/>
    </EditText>


</LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1600px"
        android:layout_marginTop="110.8px">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="1600px" />
    </RelativeLayout>


</LinearLayout>