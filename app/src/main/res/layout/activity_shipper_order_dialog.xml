<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="right"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_close"/>

        <fragment
            android:layout_marginHorizontal="70px"
            android:id="@+id/frmMaps"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="654px"
            android:layout_height="305px"
            android:layout_marginTop="79px"
            android:layout_gravity="center_horizontal"/>

    <!--    <View-->
    <!--        android:layout_width="941.76px"-->
    <!--        android:layout_height="288px"-->
    <!--        android:background="@drawable/rectangle_container"-->
    <!--        android:layout_marginTop="60px"/>-->

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="900px"
            android:layout_height="288px"
            android:layout_marginTop="60px"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="28.8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="34.56px"
                android:layout_marginLeft="40.32px"
                android:layout_marginRight="20px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="37.44px"
                        android:textColor="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#23123"
                        android:layout_marginLeft="29.72px"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TÊN KHÁCH HÀNG"
                    android:textColor="@color/black"
                    android:textSize="49px"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="10px"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="620px"
                        android:layout_height="wrap_content"
                        android:text="hien thi dia chi khach hang o day"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="37.44px"
                        android:textColor="@color/grey" />

                        <View
                            android:layout_marginLeft="4px"
                            android:layout_width="41px"
                            android:layout_height="53px"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_baseline_location_on_24"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.3km"
                            android:layout_marginLeft="9px"
                            android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="900px"
            android:layout_height="400px"
            android:layout_marginTop="33px"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="28.8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="34.56px"
                android:layout_marginLeft="40.32px"
                android:layout_marginRight="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="(4items)"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="90.000VNĐ"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service fee:"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="5.000VNĐ"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery fees:"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="2.3km"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="30.000VNĐ"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="65px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22px"
                        android:text="125.000VNĐ"
                        android:textSize="40.32px"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="right"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnAcceptOrder"
            android:layout_width="900px"
            android:layout_height="130px"
            android:layout_marginTop="60px"
            android:background="@drawable/mint_button"
            android:backgroundTint="@color/mint"
            android:layout_gravity="center"
            android:text="Accept this order"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_semibold"
            android:textSize="46px"
            android:textColor="@color/white"
            android:layout_marginHorizontal="90px"/>

        <LinearLayout
            android:layout_width="900px"
            android:layout_height="50px"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>