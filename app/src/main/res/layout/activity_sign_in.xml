<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="108px"
        android:layout_height="108px"
        android:layout_marginLeft="51px"
        android:layout_marginTop="60px"
        android:background="@drawable/back_circle_button"
        android:src="@drawable/back_button_foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="53.48px"
        android:fontFamily="@font/lato_semibold"
        android:text="@string/Sign_in"
        android:textColor="@color/black"
        android:textSize="69.12px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="17.28px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="New user?"
            android:textSize="34.56px" />

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_marginLeft="11.52px"
            android:background="#00000000"
            android:fontFamily="@font/lato_regular"
            android:text="Create an account"
            android:textAllCaps="false"
            android:textColor="#0E7DE3"
            android:textSize="40.32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="111.56px"
        android:layout_marginRight="60px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Sign in as"
            android:textColor="@color/grey"
            android:textSize="34.56px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewRole"
                android:layout_marginTop="28.8px"
                android:layout_width="840px"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:fontFamily="@font/lato_regular"
                android:textSize="40px"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:inputType="none"/>
            <ImageView
                android:id="@+id/dropdownImageView"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/Phone_number"
            android:textColor="@color/grey"
            android:textSize="34.56px"
            android:layout_marginTop="121.68px"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/editTextEnterPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28.8px"
                android:hint="@string/Enter_your_phone_number"
                android:textColor="@color/black"
                android:textSize="40.32px"
                android:inputType="numberSigned"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--        <com.google.android.material.textfield.TextInputLayout-->
        <!--            android:id="@+id/editTextEnterPhoneNumber"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:hintEnabled="false"-->
        <!--            app:counterEnabled="true"-->
        <!--            app:counterMaxLength="10"-->
        <!--            android:layout_marginTop="28.8px">-->

        <!--            <com.google.android.material.textfield.TextInputEditText-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginTop="28.8px"-->
        <!--                android:hint="@string/Enter_your_phone_number"-->
        <!--                android:textColor="@color/black"-->
        <!--                android:textSize="40.32px"-->
        <!--                android:inputType="number|phone"/>-->
        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="121.68px"
            android:fontFamily="@font/lato_regular"
            android:text="@string/Password"
            android:textColor="@color/grey"
            android:textSize="34.56px" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/editTextEnterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="40.32px"
                android:hint="@string/Enter_your_password"
                android:inputType="textPassword"
                android:layout_marginTop="28.8px" />
        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="103.68px">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:background="@drawable/mint_button"
                app:backgroundTint="@color/mint"
                android:text="@string/Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="46.08px" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:background="#00000000"
            android:fontFamily="@font/lato_regular"
            android:text="@string/Reset_your_password"
            android:textAllCaps="false"
            android:textColor="#0E7DE3"
            android:textSize="40.32px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40px"/>
    </LinearLayout>

</LinearLayout>