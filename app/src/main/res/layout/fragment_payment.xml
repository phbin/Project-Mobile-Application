<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paymentSheetBottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:background="@drawable/dialog_fragment_corner"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnMomo"
            android:layout_width="match_parent"
            android:layout_height="256px"
            android:layout_marginTop="130px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172.8px"
                android:layout_gravity="center"
                android:layout_marginLeft="72px"
                android:background="@drawable/circle_mint"
                android:scaleType="fitCenter">

                <ImageView
                    android:layout_width="63.36px"
                    android:layout_height="56.87px"
                    android:layout_marginHorizontal="54.64px"
                    android:layout_marginVertical="57.13px"
                    android:background="@drawable/momo"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43.2px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Momo wallet"
                    android:textColor="@color/black"
                    android:textSize="40.32px"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Bin Bin"
                    android:textColor="@color/grey"
                    android:textSize="40.32px"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="70px"
                android:gravity="right">

                <ImageView
                    android:layout_width="120.96px"
                    android:layout_height="115.2px"
                    android:background="@drawable/logomomo"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnVisa"
            android:layout_width="match_parent"
            android:layout_height="256px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172.8px"
                android:layout_gravity="center"
                android:layout_marginLeft="72px"
                android:background="@drawable/circle_mint"
                android:scaleType="fitCenter">

                <ImageView
                    android:layout_width="63.36px"
                    android:layout_height="56.87px"
                    android:layout_marginHorizontal="54.64px"
                    android:layout_marginVertical="57.13px"
                    android:background="@drawable/visa"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43.2px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Visa"
                    android:textColor="@color/black"
                    android:textSize="40.32px"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Bin Bin"
                    android:textColor="@color/grey"
                    android:textSize="40.32px"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="70px"
                android:gravity="right">

                <ImageView
                    android:layout_width="135.36px"
                    android:layout_height="43.2px"
                    android:background="@drawable/logovisa"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMastercard"
            android:layout_width="match_parent"
            android:layout_height="256px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172.8px"
                android:layout_gravity="center"
                android:layout_marginLeft="72px"
                android:background="@drawable/circle_mint"
                android:scaleType="fitCenter">

                <ImageView
                    android:layout_width="63.36px"
                    android:layout_height="56.87px"
                    android:layout_marginHorizontal="54.64px"
                    android:layout_marginVertical="57.13px"
                    android:background="@drawable/visa"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="43.2px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Mastercard"
                    android:textColor="@color/black"
                    android:textSize="40.32px"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Bin Bin"
                    android:textColor="@color/grey"
                    android:textSize="40.32px"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="70px"
                android:gravity="right">

                <ImageView
                    android:layout_width="141.12px"
                    android:layout_height="77.76px"
                    android:background="@drawable/logomc"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>