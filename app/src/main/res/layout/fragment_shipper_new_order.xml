<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    tools:context=".ShipperNewOrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="288px"
                    android:layout_marginTop="60px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="34.56px"
                        android:layout_marginLeft="40.32px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="45px">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="37.44px"
                                android:textColor="@color/grey" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="#23123"
                                android:layout_marginLeft="29.72px"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TÊN NHÀ HÀNG"
                            android:textColor="@color/black"
                            android:textSize="49px"
                            android:fontFamily="@font/lato_bold"
                            android:layout_marginTop="10px"/>

                        <TextView
                            android:layout_width="715px"
                            android:layout_height="wrap_content"
                            android:text="hien thi dia chi nha hang o day"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="37.44px"
                            android:textColor="@color/grey" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="288px"
                    android:layout_marginTop="70px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="34.56px"
                        android:layout_marginLeft="40.32px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="45px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TÊN KHÁCH HÀNG"
                            android:textColor="@color/black"
                            android:textSize="49px"
                            android:fontFamily="@font/lato_bold"
                            android:layout_marginTop="10px"/>

                        <TextView
                            android:layout_width="715px"
                            android:layout_height="wrap_content"
                            android:text="hien thi dia chi nha hang o day"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="37.44px"
                            android:textColor="@color/grey" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="941.76px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:layout_gravity="center_horizontal"
                    card_view:cardCornerRadius="28.8px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="41px"
                        android:layout_marginTop="34.56px"
                        android:layout_marginBottom="40px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order detail"
                            android:textColor="@color/grey"
                            android:textSize="37.44px"
                            android:fontFamily="@font/lato_regular"
                            android:layout_marginTop="34.56px"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listviewItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#00000000"
                            android:layout_marginTop="45.92px"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="2.88px"
                            android:layout_marginTop="47.68px"
                            android:background="#DEDEDE"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="37.44px">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:id="@+id/textNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subtotal"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="40.32px"
                                    android:textColor="@color/black"
                                    >
                                </TextView>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:id="@+id/textFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Delivery fees:"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:textColor="@color/black"
                                        >
                                    </TextView>
                                    <TextView
                                        android:id="@+id/textDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.3km"
                                        android:layout_marginLeft="26.8px"
                                        android:fontFamily="@font/lato_bold"
                                        android:textSize="40.32px"
                                        android:textColor="@color/black"
                                        >
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:id="@+id/textSubPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:text="90.000 VND"
                                        >
                                    </TextView>
                                    <TextView
                                        android:id="@+id/textSubFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/lato_regular"
                                        android:textSize="40.32px"
                                        android:text="18.000 VND"
                                        >
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="65px"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="@color/black"
                                android:textSize="40.32px"
                                android:fontFamily="@font/lato_bold"
                                >
                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewEnd"
                                android:text="125.000 VND"
                                android:textSize="37.44px"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"
                                >
                            </TextView>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="981px"
            android:layout_height="130px"
            android:layout_gravity="center"
            android:layout_marginTop="69px"
            android:background="@drawable/mint_button"
            android:backgroundTint="@color/mint"
            android:fontFamily="@font/lato_semibold"
            android:text="Start delivery"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="48px"
            app:backgroundTint="@color/mint"
            android:layout_marginBottom="200px"/>
    </LinearLayout>

    </ScrollView>
</FrameLayout>