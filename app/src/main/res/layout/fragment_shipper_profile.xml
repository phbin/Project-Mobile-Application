<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShipperProfileFragment"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="122px"
            android:gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="236px"
                android:layout_height="236px"
                android:src="@drawable/meow"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:paddingHorizontal="60px"
            android:textColor="@color/black"
            android:textSize="90px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:layout_marginLeft="95px"
            android:fontFamily="@font/lato_regular"
            android:textSize="37px"
            android:text="Vehicle information"
            android:textColor="@color/grey"/>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="941.76px"
            android:layout_height="210px"
            android:layout_marginTop="14px"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="28.8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="34.56px"
                android:layout_marginLeft="40.32px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="45px">

                <TextView
                    android:id="@+id/textViewTransport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="37.44px"
                    android:textColor="@color/grey" />


                <TextView
                    android:id="@+id/textViewLicensePlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="49px"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="14px"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53px"
            android:layout_marginLeft="95px"
            android:fontFamily="@font/lato_regular"
            android:textSize="37px"
            android:text="Phone number"
            android:textColor="@color/grey"/>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="941.76px"
            android:layout_height="196px"
            android:layout_marginTop="14px"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="28.8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="34.56px"
                android:layout_marginLeft="40.32px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="45px">

                <TextView
                    android:id="@+id/textViewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="49px"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="14px"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="981px"
            android:layout_height="130px"
            android:layout_gravity="center"
            android:background="@drawable/mint_button"
            android:backgroundTint="@color/mint"
            android:fontFamily="@font/lato_semibold"
            android:text="Log out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="48px"
            android:layout_marginTop="70px"
            android:layout_marginBottom="70px"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>