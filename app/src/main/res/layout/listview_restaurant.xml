<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288px"
        android:layout_marginTop="48.96px"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="288px"
            android:layout_marginHorizontal="69.12px"
            android:gravity="center"
            android:background="@drawable/border_shadow_button"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="288px"
                android:background="@drawable/square_mint"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/imgRest"
                    android:layout_width="288px"
                    android:layout_height="290.88px"


                    >
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51.68px"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/textNameRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shaking Beef Tri-Tip"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black"
                    android:textSize="40.32px"
                    >
                </TextView>
                <TextView
                    android:id="@+id/textDish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger-chicken-cake"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/grey"
                    android:textSize="34.56px"
                    >

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="51.54px"
                        android:layout_height="41.96px"
                        android:layout_marginTop="52.8px"
                        android:background="@drawable/rate_star"/>
                    <TextView
                        android:id="@+id/textRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginTop="70.08px"/>
                    <ImageView
                        android:layout_width="50.32px"
                        android:layout_height="52.5px"
                        android:layout_marginStart="84.6px"
                        android:layout_marginTop="52.8px"
                        android:background="@drawable/location_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 km"
                        android:id="@+id/textLocation"
                        android:textColor="@color/grey"
                        android:layout_marginTop="70.08px"
                        android:layout_marginStart="8.64px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>