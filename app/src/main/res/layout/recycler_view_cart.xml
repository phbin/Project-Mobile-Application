<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="69px">
<androidx.cardview.widget.CardView
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="40px"
    tools:ignore="MissingConstraints"
    android:layout_weight="0">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="288px"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border_shadow_button"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="50px"
            android:layout_width="wrap_content"
            android:layout_height="288px"
            app:cardCornerRadius="10dp"
            android:background="@drawable/square_mint"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/imageFD"
                android:layout_width="288px"
                android:layout_height="288px"
                android:scaleType="centerCrop"
                app:cardCornerRadius="10dp"
                app:srcCompat="@drawable/meow"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51.68px"
            android:orientation="vertical"
            android:layout_marginRight="176.6px"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textNameFD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shaking Beef Tri-Tip"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/black"
                android:textSize="40.32px"
                />
            <TextView
                android:id="@+id/textQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17px"
                android:text="x1"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/grey"
                android:textSize="34.56px"
                />
            <TextView
                android:id="@+id/textPrice"
                android:layout_marginTop="63.92px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30.000 VND" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="35px"
            android:layout_height="35px"
            android:src="@drawable/ic_close_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            >
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>