<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288px"
        android:layout_marginTop="48.96px"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="288px"
            android:layout_marginHorizontal="69.12px"
            android:gravity="center"
            android:background="@drawable/border_shadow_button"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="288px"
                app:cardCornerRadius="10dp"
                android:background="@drawable/square_mint"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/imageFD"
                    android:scaleType="centerCrop"
                    android:layout_width="288px"
                    android:background="@drawable/square_mint"
                    app:cardCornerRadius="10dp"
                    android:layout_height="290.88px">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51.68px"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shaking Beef Tri-Tip"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black"
                    android:textSize="40.32px"
                    >
                </TextView>
                <TextView
                    android:id="@+id/textSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/grey"
                    android:textSize="34.56px"
                    >
                </TextView>
                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30.000 VND" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>