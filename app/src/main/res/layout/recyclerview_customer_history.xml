<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="218px"
    android:layout_marginBottom="62.24px">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24px"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="28.8px"
        android:layout_marginBottom="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:orientation="horizontal"
            android:layout_marginTop="18px"
            android:layout_marginHorizontal="28px"
            android:layout_marginBottom="50px">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewRestaurant"
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@drawable/meow"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="133px"
                android:orientation="vertical"
                android:layout_marginLeft="63px"
                android:layout_marginTop="17px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:src="@drawable/ic_check"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:textSize="23px"
                        android:layout_marginLeft="10px"
                        android:textColor="@color/mint"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="10px"
                        android:layout_height="10px"
                        android:background="@color/grey"
                        android:layout_marginLeft="10px"/>

                    <TextView
                        android:id="@+id/textViewQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="23px"
                        android:layout_marginLeft="10px"
                        android:textColor="@color/grey"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="items"
                        android:textSize="23px"
                        android:layout_marginLeft="10px"
                        android:textColor="@color/grey"/>
                </LinearLayout>
                
                <TextView
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewResName"
                    android:fontFamily="@font/lato_semibold"
                    android:textColor="@color/black"
                    android:textSize="37.44px"
                    android:layout_marginTop="14px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17px"
                android:layout_marginLeft="10px"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="23-03-2002"
                    android:textSize="28px"
                    android:gravity="right"
                    android:fontFamily="@font/lato_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/textViewTotal"
                        android:layout_marginTop="12px"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="30.000"
                        android:textSize="32px"
                        android:gravity="right"
                        android:fontFamily="@font/lato_regular"/>
                    <TextView
                        android:layout_marginTop="12px"
                        android:layout_width="80px"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="VNĐ"
                        android:textSize="32px"
                        android:gravity="right"
                        android:fontFamily="@font/lato_regular"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>