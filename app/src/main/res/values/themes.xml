<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDelivery" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mint</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        </style>
        <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/Modal</item>
        </style>
        <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
            <item name="android:background">@drawable/dialog_fragment_corner</item>
        </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/mint</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/mint</item>
        <!-- arrow bordercolor(<>)-->
        <item name="colorControlHighlight">#9AE4E7</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/mint</item>
    </style>


    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">50px</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>
</resources>